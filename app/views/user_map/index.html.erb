<script type="text/template" id="info-window-template">
    <div id="infowindow">
        <div id="business-pic">
            <img src="<%%=image_url%>"/>
        </div>
        <div id="busness-info">
            <a href="<%%=url%>" alt="business page on yelp"> <strong><%%=name%></strong></a>
            </br>
            <img src="<%%=rating_img_url%>" /> &nbsp;<i>Reviews: <%%=review_count%></i>
            <p>
                <%%=location.address%></br>
                <%%=display_phone%>
            </p>
        </div>
        <div id="business-edit">
            <p><a id="business-edit-btn">Edit</a></p>
            <div id="edit-form" style="display:none;">
                <form class="form-inline">
                    <textarea id="comment" placeholder="Your comment..." rows="4" class="input-large"></textarea>
                    <div class="rating">
                        <div class="star_1 ratings-stars" data-value=1 >☆</div>
                        <div class="star_2 ratings-stars" data-value=2 >☆</div>
                        <div class="star_3 ratings-stars" data-value=3 >☆</div>
                        <div class="star_4 ratings-stars" data-value=4 >☆</div>
                        <div class="star_5 ratings-stars" data-value=5 >☆</div>
                    </div>
                    <br/>
                    <button type="submit" class="btn">Save</button>
                </form>
            </div>
        </div>
    </div>
</script>

<div id="info-window-content">
</div>

<div class="row">
    <div class="span3" id="filter-panel">
        <select id="category">
            <option value="">All categories</option>
            <option value="bagels">Bagels</option>
            <option value="bakeries">Bakeries</option>
            <option value="coffee">Coffee and tea</option>            
            <option value="desserts">Desserts</option>
            <option value="gelato">Gelato</option>
        </select>
        <span id="amount">4</span>
        <div id="rating-slider">
            
        </div>
        <br/>
        <div class="btn" id="btn-search">Search</div>
    </div>
    
    <div class="span9" id="map">
        <div id="map-canvas"></div>
    </div>
    
    
</div>

<script type="text/javascript">
    
    window.yelpMap = window.yelpMap || {};
    window.yelpMap.raw_user = <%= @user.present? ? @user.to_json.html_safe : 'null' %>;
  $(function() {
      // var yelpMap = window.yelpMap;
      // yelpMap.user_locations_raw = <%= @locations.present? ? @locations.to_json : '[]' %>;
      // 
      
      
      $('#rating-slider').slider({
          value:4,
          min: 0,
          max: 4,
          step: 1,
          slide: function(event, ui){
              $("#amount").text(ui.value );
          }
      })
  });
</script>

